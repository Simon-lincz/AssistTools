<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/screenlock_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/grayround"
        android:src="@drawable/ic_lock_power_off" />

    <ToggleButton
        android:id="@+id/screenlock_togglebtn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/screenlock_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:text="@string/device_avtive_btn_title"
        android:textOff="@string/device_avtive_btn_cancel"
        android:textOn="@string/device_avtive_btn_ok" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/screenlock_togglebtn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/device_avtive_btn_title"
        android:textSize="20sp" />
    
     <ToggleButton
        android:id="@+id/screenlock_togglebtn_phone_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenlock_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="@string/device_avtive_btn_title"
        android:textOff="@string/device_avtive_btn_cancel"
        android:textOn="@string/device_avtive_btn_ok" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenlock_btn_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/device_phoneCall_lock_btn_title"
        android:textSize="20sp" />
    
</RelativeLayout>